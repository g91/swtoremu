<Window x:Class="SCPTExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SCPT Extractor - Version 0.4 - Emulator Nexus" Height="600" Width="900" Background="Transparent" MinWidth="900" MinHeight="600">
    <Grid>
        <Button Content="Browse..." Height="23" Margin="0,12,12,0" Name="browseBtn" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="browseBtn_Click" BorderBrush="#FF828790" />
        <TextBox Height="23" Margin="12,12,93,0" Name="pathBox" VerticalAlignment="Top" BorderBrush="#FF828790" />
        
        <ListBox HorizontalAlignment="Left" Margin="12,79,0,12" Name="scriptBox" Width="235" FontFamily="Consolas" ItemsSource="{Binding}" MouseDoubleClick="scriptBox_MouseDoubleClick" />
        <Button Content="Extract Scripts" Height="32" HorizontalAlignment="Left" Margin="12,41,0,0" Name="extractBtn" VerticalAlignment="Top" Width="235" Click="extractBtn_Click" BorderBrush="#FF828790" />
        <TextBox Margin="253,41,12,12" Name="consoleBox" BorderBrush="#FF828790" Foreground="White" Background="#FF010101" VerticalScrollBarVisibility="Visible" Padding="8" FontFamily="Consolas" MaxLines="150" TextWrapping="Wrap" />
    </Grid>
</Window>
