<Window x:Class="TorDataMiner.LoginBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login with your Emulator Nexus account" Height="190" Width="300" Background="Transparent" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Topmost="True" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" Margin="99,23,12,0" Name="textBox1" VerticalAlignment="Top" />
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="12,21,0,0" Name="label1" VerticalAlignment="Top" Width="81" Foreground="White">
            <Label.Effect>
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="1" BlurRadius="10" />
            </Label.Effect>
        </Label>
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,65,0,0" Name="label2" VerticalAlignment="Top" Width="81" Foreground="White">
            <Label.Effect>
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="15" BlurRadius="10" />
            </Label.Effect>
        </Label>
        <TextBox Height="23" Margin="99,67,12,0" Name="textBox2" VerticalAlignment="Top" />
        <Button Content="Login" Name="button1" HorizontalAlignment="Right" Width="103" Height="28" VerticalAlignment="Bottom" Margin="0,0,12,21" />
    </Grid>

</Window>
